<?xml version="1.0" encoding="utf-8"?>

<blocks>

<!-- Insert the new, custom BLOCKS before any usage -->

    <!-- ATM (looted) -->
    <insertAfter xpath="/blocks/block[@name='cntATMInsecure']">

        <block name="rbtLootedATM">
            <property name="Extends" value="cntATMInsecure"/>
            <property name="CreativeMode" value="Dev"/>
            <property name="LootList" value="atmEmpty"/>
            <property name="CustomIcon" value="cntATMSecure"/>
            <property name="DescriptionKey" value="rbtLootedATMDesc"/>
            <property name="FilterTags" value="MC_building"/>
            <property name="SortOrder1" value="R010"/>
            <property name="SortOrder2" value="9010"/>
        </block>

    </insertAfter>

    <!-- Post Mailbox (looted) -->
    <insertAfter xpath="/blocks/block[@name='cntPostMailbox']">

        <block name="rbtEmptyPostMailbox">
            <property name="Extends" value="cntPostMailbox"/>
            <property name="CreativeMode" value="Dev"/>
            <property name="LootList" value="mailboxEmpty"/>
            <property name="CustomIcon" value="cntPostMailbox"/>
            <property name="DescriptionKey" value="rbtEmptyPostMailboxDesc"/>
            <property name="FilterTags" value="MC_building,SC_commercial,MC_outdoor,SC_decor"/>
            <property name="SortOrder1" value="R030"/>
            <property name="SortOrder2" value="9030"/>
        </block>

    </insertAfter>

    <!-- News Dispensers (looted) -->
