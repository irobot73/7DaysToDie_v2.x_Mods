            <property name="Group" value="Resources"/>
            <property name="SortOrder1" value="R405"/>
            <property name="SortOrder2" value="9405"/>
            <property name="FilterTags" value="MC_outdoor,SC_trees,MC_helpers,MC_playerBlocks,SC_playerHelpers"/>
