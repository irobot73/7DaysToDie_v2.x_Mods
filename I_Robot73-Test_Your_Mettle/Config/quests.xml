<?xml version="1.0" encoding="utf-8"?>

<quests>

    <!-- Setup the rewards choices we'll be injecting' -->
	<insertafter xpath="//quest[@id='quest_whiteRiverCitizen1']/property[@name='shareable']">
		<property name="reward_choices_count" value="5" />
	</insertafter>

    <!-- Mark IntroComplete -->
	<insertafter xpath="//quest[@id='quest_whiteRiverCitizen1']/objective[@type='InteractWithNPC']">
		<action type="SetCVar">
			<property name="cvar" value="IntroComplete" />
			<property name="value" value="1" />
			<property name="on_complete" value="true" />
		</action>
	</insertafter>

    <!-- Take your damn shovel - Rekt -->
	<setattribute xpath="//quest/reward[@id='meleeToolShovelT0StoneShovel']" name="ischosen">false</setattribute>
    <insertafter xpath="//quest/reward[@id='meleeToolShovelT0StoneShovel']">
        <reward type="Item" id="q_basicSurvivalCasual" ischosen="false" value="1"/>
    </insertafter>

    <!-- Since the 'Intro Buried Supplies' quest will never be offered, insert rewards into  -->
	<insertAfter xpath="//quest[@id='quest_whiteRiverCitizen1']/reward[@type='Exp']">
		<reward type="Item" id="questRewardPipePistolBundle" ischosen="true" value="1" />
		<reward type="Item" id="questRewardPipeShotgunBundle" ischosen="true" value="1" />
		<reward type="Item" id="questRewardPipeRifleBundle" ischosen="true" value="1" />
		<reward type="Item" id="questRewardPipeMachineGunBundle" ischosen="true" value="1" />
		<reward type="Item" id="questRewardPipeBatonBundle" ischosen="true" value="1" />
	</insertAfter>

    <!-- Make sure none of the other traders offer the 'Intro Buried Supplies' quest -->
	<remove xpath="//quests/quest_list[starts-with(@id,'trader_')]/quest[@id='intro_buried_supplies']" />

    <!-- Tweak existing 'intro_buried_supplies' quest that player can complete if/when they choose -->
    <remove xpath="//quest[@id='intro_buried_supplies']/property[@name='single_quest']" />
    <remove xpath="//quest[@id='intro_buried_supplies']/action[@type='SetCVar']" />
    <remove xpath="//quest[@id='intro_buried_supplies']/reward[@type='Item']" />
    <!-- Not biome dependant any longer -->
    <remove xpath="//quest[@id='intro_buried_supplies']/objective[@type='RandomGotoNPC']/property[@name='biome_filter_type']" />
    <remove xpath="//quest[@id='intro_buried_supplies']/objective[@type='RandomGotoNPC']/property[@name='biome_filter']" />

	<insertafter xpath="//quest[@id='intro_buried_supplies']/reward[@type='Exp']">
        <reward type="LootItem" id="groupQuestFood,groupQuestAmmo,groupQuestSchematics" ischosen="true" value="1"/>
        <reward type="LootItem" id="groupQuestFood,groupQuestAmmo,groupQuestSchematics" ischosen="true" value="1"/>
        <reward type="LootItem" id="groupQuestFood,groupQuestAmmo,groupQuestSchematics" ischosen="true" value="1"/>
        <reward type="LootItem" id="groupQuestResourcesT0" ischosen="true" value="2"/>
        <reward type="LootItem" id="groupQuestMedical,groupQuestAmmo,groupQuestSchematics" ischosen="true" value="2"/>
    </insertafter>

</quests>
